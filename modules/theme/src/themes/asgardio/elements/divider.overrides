/*******************************
      Divider Overrides
*******************************/

/*----------------------------------------
      Vertical divider with no border
------------------------------------------*/

.ui.vertical.divider {
    &.vertical-divider-with-no-border {
        font-size: @verticalDividerWithNoBordersFontSize;
        font-weight: @verticalDividerWithNoBordersFontWeight;
        color: @verticalDividerWithNoBordersFontColor;

        &:after {
            border: none;
        }

        &:before {
            border: none;
        }
    }
}

/*----------------------------------------
      Info-Card divider hidden
------------------------------------------*/
.ui.instance.divider{
    padding: 0px;

}
.divider.ui.instance.divider{
    margin-top:0px;
    margin-bottom:10px;
    margin-right:14px;
    margin-left:14px;

}
